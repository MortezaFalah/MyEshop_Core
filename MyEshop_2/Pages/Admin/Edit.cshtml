@page
@model MyEshop_2.Pages.Admin.EditModel

@{  ViewData["Title"] = "ویرایش محصول";
}
<h3>ویرایش کالا</h3>
<hr />
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.Id" />
<dl class="dl-horizontal">
    
    <dd>
        <label asp-for="Product.Name"></label>
    </dd>
    <dt>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name"></span>
    </dt>
      <dd>
        <label asp-for="Product.Description"></label>
    </dd>
    <dt>
        <textarea asp-for="Product.Description" class="form-control" > </textarea>
        <span asp-validation-for="Product.Description"></span>
    </dt>
      <dd>
        <label asp-for="Product.Price"></label>
    </dd>
    <dt>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price"></span>
    </dt>
      <dd>
        <label asp-for="Product.QuantityinStock"></label>
    </dd>
    <dt>
        <input asp-for="Product.QuantityinStock" class="form-control" />
        <span asp-validation-for="Product.QuantityinStock"></span>
    </dt>
      <dd>
        <label asp-for="Product.Picture"></label>
    </dd>
    <dt>
        <input asp-for="Product.Picture" class="form-control" />
        <span asp-validation-for="Product.Picture"></span>
    </dt>


    <dd>
            لیست گروه ها
        </dd>

        @foreach (var item in @Model.Product.Categories)
        {
            <dt>
               <p>
                <input type="checkbox" class="btn btn-success"
                value="@item.id" name="SelectedGroups" @(Model.ProductGroups.Any(r=>r == item.id) ?"checked":"")/> @item.name
                </p>
            </dt>
        }



    <dd></dd>
    <dt>
        <input type="submit" class="btn btn-success" value="ویرایش" />
    </dt>
</dl>    
</form>