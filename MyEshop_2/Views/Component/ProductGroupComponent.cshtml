@model IEnumerable<ShowGroupViewModel>

<ul class="list-group">
@foreach (var item in Model)
{
    <li class="list-group-item d-flex justify-content-between align-items-center">
       <a asp-controller="Product" asp-action="ShowProductByGroup" asp-route-id="@item.GroupId" asp-route-name="@item.Name">@item.Name</a>
        <span class="badge badge-primary badge-pill btn-primary">@item.ProductCount</span>
    </li>
}
</ul>
